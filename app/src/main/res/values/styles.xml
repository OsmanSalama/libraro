<resources>
    <style name="CustomToolbarTitle">
        <item name="android:textAlignment">center</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/main_background</item>
        <item name="android:textColor">@color/gruvbox_dark</item>
    </style>

    <style name="PopupMenuOverlayStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/gruvbox_dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlHighlight">@color/gruvbox_dark_soft</item>
    </style>

    <style name="BottomNavigationViewItem" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
    </style>

</resources>